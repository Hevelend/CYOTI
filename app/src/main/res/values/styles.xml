<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:typeface">monospace</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/bar_blue</item>
		<item name="android:icon">@drawable/ic_app</item>

        <!-- Support library compatibility -->
        <item name="background">@color/bar_blue</item>
    </style>

    <style name="DetailUserProfile">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fe7b7b7b</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>

    <style name="SectionUserProfile">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name ="android:textSize">35sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
